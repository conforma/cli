{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>konflux-ci/mintmaker//config/renovate/renovate.json",
    "config:best-practices"
  ],
  "timezone": "America/New_York",
  "schedule": [
    "* * * * 0"
  ],
  "baseBranches": [
    "main",
    "release-v0.5",
    "release-v0.6"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile"
      ],
      "matchDepNames": [
        "docker.io/library/golang"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchDepNames": [
        "go"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "asdf"
      ],
      "matchDepNames": [
        "golang"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "asdf"
      ],
      "groupName": "asdf Updates"
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "groupName": "Dockerfile Updates"
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchFileNames": [
        "/"
      ],
      "groupName": "gomod / Updates"
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchFileNames": [
        "/tools/kubectl/"
      ],
      "groupName": "gomod Kubectl Updates"
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchFileNames": [
        "/tools/"
      ],
      "groupName": "gomod Tools Updates"
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchFileNames": [
        "/acceptance/"
      ],
      "groupName": "gomod Acceptance Test Updates"
    },
    {
      "matchManagers": [
        "kustomize"
      ],
      "groupName": "Kustomize Updates"
    },
    {
      "matchManagers": [
        "pre-commit"
      ],
      "groupName": "Pre-commit Updates"
    },
    {
      "matchManagers": [
        "tekton"
      ],
      "groupName": "Tekton Updates"
    }
  ]
}
